<Window x:Class="WPF_RoutedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="464.7">
    <StackPanel x:Name="spRoot" Margin="5" Orientation="Horizontal" Background='Yellow' ButtonBase.Click='spRoot_Click'>
        <StackPanel x:Name="spLeft0" Margin="10" Background="Red" Width="200">
            <StackPanel x:Name="spLeft1" Margin="10" Background="Blue">
                <StackPanel x:Name="spLeft2" Margin="10" Background="Green">
                    <Button Content="Left" x:Name="leftbtn" Click="leftbtn_Click"  Height="250"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="spRight0" Margin="10" Background="Red" Width="200">
            <StackPanel x:Name="spRight1" Margin="10" Background="Blue">
                <StackPanel x:Name="spRight2" Margin="10" Background="Green">
                    <Button Content="Right" x:Name="rightbtn" Click="rightbtn_Click" Height="250"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
