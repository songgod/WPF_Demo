<Window x:Class="WPF_CustomRoutedEvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_CustomRoutedEvent"
        Title="MainWindow" Height="289.7" Width="525"
        local:ReportTimeButton.ReportTime="ReportTimeHandler">
    <StackPanel x:Name="sp0" Background="Red" Margin="10" local:ReportTimeButton.ReportTime="ReportTimeHandler">
        <StackPanel Background="AliceBlue" >
            <ListBox x:Name="lst" Margin="5" MinHeight="100"/>
        </StackPanel>
        <StackPanel x:Name="sp1" Background="Green" Margin="10" local:ReportTimeButton.ReportTime="ReportTimeHandler">
            <StackPanel x:Name="sp2" Background="Blue" Margin="10" local:ReportTimeButton.ReportTime="ReportTimeHandler">
                <StackPanel x:Name="sp3" Background="Yellow" Margin="10" local:ReportTimeButton.ReportTime="ReportTimeHandler">
                    <local:ReportTimeButton Content="Start" x:Name="btn" Margin="10" Height="50"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
