<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="FirstWPF.wDockPanel"
	x:Name="Window"
	Title="wDockPanel"
	Width="640" Height="480">

	<DockPanel x:Name="LayoutRoot">
		<TextBox Height="25" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" DockPanel.Dock="Top"/>
		<TextBox TextWrapping="Wrap" Text="TextBox" Width="150" HorizontalAlignment="Left"/>
		<TextBox TextWrapping="Wrap" Text="TextBox"/>
	</DockPanel>
</Window>