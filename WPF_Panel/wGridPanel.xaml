<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="FirstWPF.wGridPanel"
	x:Name="Window"
	Title="wGridPanel"
	Width="640" Height="480">

	<Grid Margin="10">
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition Width="Auto" MinWidth="120"/>
    			<ColumnDefinition/>
    			<ColumnDefinition Width="80"/>
    			<ColumnDefinition Width="4"/>
    			<ColumnDefinition Width="80"/>
    		</Grid.ColumnDefinitions>
    		<Grid.RowDefinitions>
    			<RowDefinition Height="25"/>
    			<RowDefinition Height="4"/>
    			<RowDefinition/>
    			<RowDefinition Height="4"/>
    			<RowDefinition Height="25"/>
    		</Grid.RowDefinitions>
    		<TextBlock Margin="0" TextWrapping="Wrap" Text="请选择您的部门并留言："/>
    		<ComboBox Grid.Column="1" Margin="0" Grid.ColumnSpan="4"/>
    		<TextBox Margin="0" Grid.Row="2" TextWrapping="Wrap" Grid.ColumnSpan="5"/>
    		<Button Content="提交" Grid.Column="2" Margin="0" Grid.Row="4"/>
    		<Button Content="清除" Grid.Column="4" Margin="0" Grid.Row="4"/>
    </Grid>
</Window>